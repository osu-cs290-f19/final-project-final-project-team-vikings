<div class="question">
  <fieldset id={{question}} class="filter-fieldset">
    <legend>{{description}}</legend>
    <div>
      <input type="radio" name={{question_name}} id={{question_yes}} value="Yes" class="yes_no_radio">
      <label for="{{question_yes}}">Yes</label>
    </div>
    <div>
      <input type="radio" name={{question_name}} id={{question_no}} value="No" class="yes_no_radio">
      <label for={{question_no}}>No</label>
    </div>
  </fieldset>
</div>
